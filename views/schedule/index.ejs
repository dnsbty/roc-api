<html>
<head>
	<title>BYU Sports Schedule</title>
</head>
<body>
	<h1>Schedule</h1>
	<a href="/schedule/new">New Game</a>
	<table>
		<tr>
			<th>Date/Time</th>
			<th>Sport</th>
			<th>Opponent</th>
			<th>Home/Away</th>
		</tr><% games.forEach(function(game, index) { %>
		<tr>
			<td><%= game.datetime %></td>
			<td><%= game.sport %></td>
			<td><%= game.opponent %></td>
			<td><%= game.homeaway %></td>
		</tr><% }); %>
	</table>
</body>
</html>